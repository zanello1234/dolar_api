<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_currency_api_wizard_form" model="ir.ui.view">
            <field name="name">currency.api.wizard.form</field>
            <field name="model">currency.api.wizard</field>
            <field name="arch" type="xml">
                <form string="Monedas disponibles en DolarAPI">
                    <sheet>
                        <group>
                            <field name="api_currencies" readonly="1" nolabel="1" widget="text"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Cerrar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_currency_api_wizard" model="ir.actions.act_window">
            <field name="name">Monedas DolarAPI</field>
            <field name="res_model">currency.api.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
