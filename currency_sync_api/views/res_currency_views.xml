<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_currency_form_inherit_dolarapi" model="ir.ui.view">
            <field name="name">res.currency.form.inherit.dolarapi</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="dolarapi_code" widget="selection"/>
                </xpath>
            </field>
        </record>

        <record id="view_res_currency_tree_inherit_dolarapi" model="ir.ui.view">
            <field name="name">res.currency.tree.inherit.dolarapi</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="dolarapi_code" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
